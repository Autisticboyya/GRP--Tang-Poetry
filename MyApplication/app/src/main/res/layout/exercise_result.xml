<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="528dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="The accuracy of this exercise is "
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/accuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="accuracy%"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/numOfWrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(The number of wrong answer is: 0)"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/tryAgain"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:text="Try Again" />

            <Button
                android:id="@+id/wrongQuestion"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:text="Review wrong questions" />

            <Button
                android:id="@+id/reviewQuestion"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:text="Review all the questions" />

            <Button
                android:id="@+id/btn_game"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:text="Back to game" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>